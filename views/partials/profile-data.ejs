<div class="profile-header">
  <div class="profile-photo-container">
    <img id="profilePhoto" src="/static/icons/profile/avatar-stock.svg" alt="Profielfoto">
    <input type="file" id="uploadPhotoInput" accept="image/*" style="display: none;">
  </div>
  <h2 id="usernameDisplay">Gebruikersnaam</h2>
</div>

<form class="profile-form" id="updateProfileForm">
  <div class="form-group">
    <label for="bio">Bio</label>
    <textarea id="bio" name="bio" rows="4">Huidige bio-inhoud</textarea>
  </div>
  <div class="form-group">
    <label for="username">Gebruikersnaam</label>
    <input type="text" id="username" name="username">
  </div>
  <div class="form-group">
    <label for="email">E-mail</label>
    <input type="email" id="email" name="email">
  </div>

  <div class="form-group">
    <label for="currentPassword">Huidig wachtwoord</label>
    <input type="password" id="currentPassword" name="currentPassword">
  </div>
  <div class="form-group">
    <label for="newPassword">Nieuw wachtwoord</label>
    <input type="password" id="newPassword" name="newPassword">
  </div>
  <a href class="preference-button" type="submit">Wijzigingen opslaan</a>
</form>
