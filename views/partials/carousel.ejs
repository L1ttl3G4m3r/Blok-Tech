  slides-per-view="auto"
  pagination="true"
  pagination-clickable="true"
>
  <!-- Zelfgemaakte posts -->
  <swiper-slide>
    <a href="/carouselDetail" class="carousel-link">
      <h3>Zelfgemaakte Tattoo's</h3>
    </a>
    <div class="post-gallery">
      <% if (posts && posts.length > 0) { %> <% posts.forEach(post => { %>
      <div class="post">
        <img src="<%= post.imageUrl %>" alt="<%= post.title %>" />
        <h4><%= post.title %></h4>
        <p><%= post.description %></p>
      </div>
      <% }) %> <% } else { %>
      <p>Er zijn nog geen zelfgemaakte tatoeages toegevoegd.</p>
      <% } %>
    </div>
  </swiper-slide>

