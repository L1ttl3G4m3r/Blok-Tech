<div class="sort-container">
  <form id="sort-form" action="/index" method="GET">
    <select id="sort-select" name="sort_by">
      <option value="relevant" <%= currentSort === 'relevant' ? 'selected' : '' %>>Relevantie</option>
      <option value="latest" <%= currentSort === 'latest' ? 'selected' : '' %>>Nieuwste</option>
    </select>
    <noscript><input type="submit" value="Sorteer"></noscript>
  </form>
</div>

<script>
  document.getElementById('sort-select').addEventListener('change', function() {
    document.getElementById('sort-form').submit();
  });
</script>
