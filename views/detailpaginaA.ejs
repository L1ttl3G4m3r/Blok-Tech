<!DOCTYPE html>
<html lang="nl">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <header><%- include('partials/micro-header') %></header>

  <main>
    <section class="artistSection">
    <div class="artist-image">
      <img src="<%= artist.artistImages %>" alt="<%= artist.username %>" />
    </div>

    <div class="artistInfo">
    <h2><%= artist.username %></h2>
    <p><strong>Studio</strong> <%= artist.studio.name %></p>
    <p><strong>Adres</strong> <%= artist.studio.address %></p>
  </div>

  </section>

<section class="collectionSection">
    <h2>Collectie</h2>
  <div class="tattoo-grid">
    <% if (artistImages && artistImages.length > 0) { %>
      <% artistImages.forEach(function(imageUrl) { %>
          <img src="<%= imageUrl %>" alt="User Image" width="200">
      <% }); %>
  <% } else { %>
      <p>No images available.</p>
  <% } %>
  </div>

</section>
  </main>

  <footer>
    <%- include('partials/nav') %>
  </footer>
</body>
</html>
