<!DOCTYPE html>
<html lang="nl">
  <head>
    <%- include('partials/head') %>
    <title><%= pageTitle %></title>
  </head>
  <body>
    <header class="headerIndex">
      <a href="javascript:history.back()">
        <img src="/static/icons/normal/back.svg" alt="Terug">
      </a>
      <%- include('partials/header') %>
      <h1>Zelfgemaakte Tattoos</h1>
    </header>

    <section class="tattoo-gallery">
      <% if (imageUrls && imageUrls.length > 0) { %>
          <% imageUrls.forEach(image => { %>
              <div class="tattoo-item">
                  <a href="/detailpagina?image=<%= encodeURIComponent(image.url) %>">
                      <img src="<%= image.url %>" alt="<%= image.alt_description || 'Tattoo afbeelding' %>">
                  </a>
              </div>
          <% }); %>
      <% } else { %>
          <p>Er zijn geen tatoeages gevonden voor deze categorie.</p>
      <% } %>
    </section>

    <script src="/static/script/detailPages.js"></script>
  </body>
</html>
