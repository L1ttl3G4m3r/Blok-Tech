<!DOCTYPE html>
<html lang="nl">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <header><%- include('partials/micro-header') %></header>
    <main>
      <section class="microDetail">
        <h1>
          <%= typeof titel !== "undefined" && titel !== null ? titel : "Geen titel beschikbaar" %>
        </h1>

        <% if (typeof img !== "undefined" && img) { %>
          <img
            id="selectedImage"
            src="<%= img %>"
            alt="<%= titel || 'Afbeelding' %>"
          />
        <% } else { %>
          <p>Geen afbeelding gespecificeerd.</p>
        <% } %>

        <ul>
          <% if (Array.isArray(tags) && tags.length > 0) { %>
            <% tags.forEach(tag => { %>
              <li><%= tag %></li>
            <% }); %>
          <% } else { %>
            <li>Geen tags gevonden</li>
          <% } %>
        </ul>
      </section>

      <h2 class="artistHeader">Artiesten die dit ook kunnen</h2>
      <%- include('partials/artists') %>

      <section class="uitlegAfbeelding">
        <h3>Beschrijving</h3>
        <p>
          <%= typeof post.description !== "undefined" && post.description !== null && post.description !== "" ? post.description : "Geen beschrijving beschikbaar" %>
        </p>
      </section>
    </main>
    <footer><%- include('partials/nav') %></footer>

    <script src="/static/script/detailPages.js"></script>
  </body>
</html>
